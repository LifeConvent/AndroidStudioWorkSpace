<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/head_my_course"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/list_search_course"
        android:background="#cccaca"
        android:gravity="center"
        android:text="我的课程"
        android:textColor="#e9f4f3"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/course_detail_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:divider="#8dc7f4"
        android:dividerHeight="1px"
        android:layout_below="@+id/head_my_course"
        android:layout_marginBottom="12sp">
    </ListView>

</RelativeLayout>