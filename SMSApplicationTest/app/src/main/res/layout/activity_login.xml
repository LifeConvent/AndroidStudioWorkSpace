<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    >

    <ImageView
        android:layout_marginTop="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/logo"
        android:id="@+id/logo_first"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/login_account"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="手机号/邮箱"
        android:layout_marginTop="200sp"
        android:background="@drawable/qq_edit_login"
        android:inputType="textEmailAddress"
        />

    <requestFocus />

    <EditText
        android:id="@+id/login_secret"
        android:layout_width="280sp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:background="@drawable/qq_edit_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_account"
        android:layout_marginTop="30sp"
        android:inputType="textPassword"
        />

    <requestFocus />

    <Button
        android:id="@+id/login_submit"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_secret"
        android:text="登录"
        android:textColor="#3c407c"
        android:background="@drawable/shape"
        android:textSize="15sp"
        android:layout_marginTop="30sp"
        android:layout_alignLeft="@id/login_secret"/>

    <Button
        android:id="@+id/login_register"
        android:layout_width="120sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_secret"
        android:text="注册"
        android:textColor="#3c407c"
        android:background="@drawable/shape"
        android:textSize="15sp"
        android:layout_marginTop="30sp"
        android:layout_alignRight="@id/login_secret"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:textColor="#e6e8fd"
        android:background="#8dc7f4"
        android:id="@+id/button_search"
        android:layout_alignParentBottom="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试List"
        android:textColor="#e6e8fd"
        android:background="#8dc7f4"
        android:id="@+id/test_list_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>