<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/course_detail_head"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="#cccaca"
        android:gravity="center"
        android:text="课程安排"
        android:textColor="#e9f4f3"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/course_detail_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:divider="#8dc7f4"
        android:dividerHeight="0px"
        android:layout_below="@+id/course_detail_head"
        android:layout_marginBottom="12sp">
    </ListView>

    <Button
        android:id="@+id/cacel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="取消课程"
        android:background="@drawable/shape"/>

</RelativeLayout>