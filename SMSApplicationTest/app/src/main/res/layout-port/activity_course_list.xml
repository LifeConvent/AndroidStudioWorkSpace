<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/list_search_course"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:background="@null"
        android:hint="搜索"
        android:textSize="10sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/list_course_TV"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#cccaca"
        android:text="课程列表"
        android:textColor="#e9f4f3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/list_search_course"
        />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_course_LV"
        android:layout_below="@id/list_course_TV"
        android:background="#f5f5f5"
        android:divider="#8dc7f4"
        android:dividerHeight="1px">

    </ListView>

</RelativeLayout>